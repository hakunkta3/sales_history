<h1>社員リスト</h1>

<table>
  <thead>
    <tr>
      <th>社員ID</th>
      <th>氏名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staff_infos.each do |staff_info| %>
      <tr>
        <td><%= staff_info.id %></td>
        <td><%= staff_info.name %></td>
        <td><%= link_to '確認', staff_info %></td>
        <td><%= link_to '編集', edit_staff_info_path(staff_info) %></td>
        <td><%= link_to '削除', staff_info, method: :delete, data: { confirm: '本当によろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

