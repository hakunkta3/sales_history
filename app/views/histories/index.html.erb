<h1>Listing Histories</h1>

<table>
  <thead>
    <tr>
      <th>営業日時</th>
      <th>顧客ID</th>
      <th>営業区分</th>
      <th>営業成果</th>
      <th>詳細</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.activity_time %></td>
        <td><%= history.customer %></td>
        <td><%= history.sales_category %></td>
        <td><%= history.sales_achievement %></td>
        <td><%= history.detail %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<ul>
  <li><%= link_to "顧客情報", customers_path %></li>
  <li><%= link_to "社員情報", staff_infos_path %></li>
</ul>
